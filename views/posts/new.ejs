<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">
<br><br><br>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb p-1 pl-2 pr-2">
          <li class="breadcrumb-item"><a href="/" id="board-mini-nav">전체글 보기</a></li>
          <li class="breadcrumb-item"><a href="/posts" id="board-mini-nav">게시판 이름</a></li>
        </ol>
      </nav>

      <form action="/posts" method="post">

        <div class="form-group">
          <label for="title" id="new-title">제목</label>
          <input type="text" id="title" name="title" value="<%= post.title %>" class="form-control <%= (errors.title)?'is-invalid':'' %>">
          <% if(errors.title){ %>
            <span class="invalid-feedback"><%= errors.title.message %></span>
          <% } %>
        </div>

        <div class="form-group">
          <label for="body" id="new-body">내용</label>
          <textarea id="body" name="body" rows="5" class="form-control <%= (errors.body)?'is-invalid':'' %>"><%= post.body %></textarea>
            <% if(errors.body){ %>
              <span class="invalid-feedback"><%= errors.body.message %></span>
            <% } %>
        </div>
        <% if(errors.unhandled){ %>
                  <div class="invalid-feedback d-block">
                    <%= errors.unhandled %>
                  </div>
                <% } %>
        <div>
          <a class="btn btn-outline-primary" href="/posts" id="new-back">취소</a>
          <button type="submit" class="btn btn-primary" id="new-submit">등록</button>
        </div>

      </form>

    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
