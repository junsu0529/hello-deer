<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
<br><br>
    <div class="container mb-3">

      <h2 class="mb-3">게시판 이름</h2>

      <table class="board-table table table-sm border-bottom">

        <thead class="thead-light">
          <tr>
            <th scope="col">제목</th>
            <th scope="col" class="author">게시자</th> <!-- 1 -->
            <th scope="col">번호</th>
            <th scope="col" class="date">게시일</th>
            <th scope="col">추천수</th>
            <th scope="col">조회수</th>
          </tr>
        </thead>

        <tbody>
          <% if(posts == null || posts.length == 0){ %>
            <tr>
              <td colspan=100> There is no data to show :( </td>
            </tr>
          <% } %>
          <% posts.forEach(function(post) { %>
            <tr>
              <td>
                <a href="/posts/<%= post._id %>"><div class="ellipsis"><%= post.title %></div></a>
              </td>
              <td class="author"> <!-- 2 -->
                <div class="ellipsis"><%= post.author ? post.author.username : "" %></div>
              </td>
              <td class="date">
                <span data-date="<%= post.createdAt %>"><%= post.createdAt %></span>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>

      <div>
        <a class="btn btn-outline-primary" href="/posts/new" id="new-btn">새 글</a>
      </div>

    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
